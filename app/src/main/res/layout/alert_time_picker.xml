<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/text_light_blue_color"
    android:orientation="vertical"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/ic_launcher"/>

        <com.aircall.app.TextFonts.TextViewOpenSansBoldFont
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="@dimen/common_header_text_size"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">

        <com.aircall.app.Common.NumberPicker
            android:id="@+id/npMonthPicker"
            android:background="@color/text_light_blue_color"
            android:layout_width="wrap_content"
            android:divider="@color/white"
            android:layout_height="wrap_content" />

        <com.aircall.app.Common.NumberPicker
            android:id="@+id/npYearPicker"
            android:background="@color/text_light_blue_color"
            android:layout_marginLeft="20dp"
            android:divider="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.aircall.app.Common.NumberPicker
            android:id="@+id/np_am_pm"
            android:background="@color/text_light_blue_color"
            android:layout_marginLeft="20dp"
            android:divider="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:gravity="center">

        <com.aircall.app.TextFonts.TextViewOpenSansRagularFont
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="OK"
            android:textColor="@color/text_light_blue_color"
            android:textSize="@dimen/header_text_size"/>

    </LinearLayout>


</LinearLayout>