<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_gravity="center">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/HeaderName"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Quantity Of Filter"
            android:gravity="center"
            android:textColor="@color/text_light_blue_color"
            android:textSize="20sp" />
        <ImageView
            android:id="@+id/ivCancelDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/close_icon_blue"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/devider_color" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="300dp"
        android:background="@color/plan_detail_background"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rlQuantityZero"
            android:layout_width="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_height="50dp"
            android:paddingRight="@dimen/padding_right"
            android:paddingLeft="@dimen/padding_left">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="0"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:textSize="18sp"/>
            <ImageView
                android:id="@+id/ivCheckForZero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:visibility="visible"
                android:src="@drawable/right_icon"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/devider_color" />

        <RelativeLayout
            android:id="@+id/rlQuantityOne"
            android:layout_width="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_height="50dp"
            android:paddingRight="@dimen/padding_right"
            android:paddingLeft="@dimen/padding_left">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="1"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:textSize="18sp"/>
            <ImageView
                android:id="@+id/ivCheckForOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:visibility="gone"
                android:src="@drawable/right_icon"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/devider_color" />

        <RelativeLayout
            android:id="@+id/rlQuantityTwo"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingRight="@dimen/padding_right"
            android:paddingLeft="@dimen/padding_left">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="2"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:textSize="18sp"/>
            <ImageView
                android:id="@+id/ivCheckForTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:visibility="gone"
                android:src="@drawable/right_icon"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/devider_color" />

        <RelativeLayout
            android:id="@+id/rlQuantityThree"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingRight="@dimen/padding_right"
            android:paddingLeft="@dimen/padding_left">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="3"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:textSize="18sp"/>
            <ImageView
                android:id="@+id/ivCheckForThree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:visibility="gone"
                android:src="@drawable/right_icon"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/devider_color" />

        <RelativeLayout
            android:id="@+id/rlQuantityFour"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingRight="@dimen/padding_right"
            android:paddingLeft="@dimen/padding_left">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="4"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:textSize="18sp"/>
            <ImageView
                android:id="@+id/ivCheckForFour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:visibility="gone"
                android:src="@drawable/right_icon"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/devider_color" />

        <RelativeLayout
            android:id="@+id/rlQuantityFive"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingRight="@dimen/padding_right"
            android:paddingLeft="@dimen/padding_left">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="5"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:textSize="18sp"/>
            <ImageView
                android:id="@+id/ivCheckForFive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:visibility="gone"
                android:src="@drawable/right_icon"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/devider_color" />

        <RelativeLayout
            android:id="@+id/rlQuantitySix"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingRight="@dimen/padding_right"
            android:paddingLeft="@dimen/padding_left">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:textSize="18sp"/>
            <ImageView
                android:id="@+id/ivCheckForSix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:visibility="gone"
                android:src="@drawable/right_icon"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/devider_color" />

    </LinearLayout>
</LinearLayout>