<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/header_height"
            android:background="@color/header">
            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:padding="@dimen/back_arrow_padding"
                android:src="@drawable/arrow"/>
            <com.aircall.app.TextFonts.TextViewOpenSansBoldFont
                android:id="@+id/tvHeaderName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/billing_address_title"
                android:textColor="@color/white"
                android:textSize="@dimen/common_header_text_size"/>
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/padding_right"
                    android:paddingLeft="@dimen/padding_left"
                    android:orientation="vertical">
                    <com.aircall.app.TextFonts.TextViewOpenSansRagularFont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/billing_address_first_name"
                        android:textSize="@dimen/signin_text"
                        android:textColor="@color/black"
                        android:layout_gravity="center_vertical"/>
                    <EditText
                        android:id="@+id/etFirstName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:inputType="textMultiLine"
                        android:padding="10dp"
                        android:background="@drawable/edit_text_border_background"
                        android:singleLine="true"
                        android:layout_marginTop="10dp" >
                        </EditText>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/padding_right"
                    android:paddingLeft="@dimen/padding_left"
                    android:layout_marginTop="@dimen/margin_top"
                    android:orientation="vertical">
                    <com.aircall.app.TextFonts.TextViewOpenSansRagularFont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/billing_address_last_name"
                        android:textSize="@dimen/signin_text"
                        android:textColor="@color/black"
                        android:layout_gravity="center_vertical"/>
                    <EditText
                        android:id="@+id/etLastName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:inputType="textMultiLine"
                        android:padding="10dp"
                        android:background="@drawable/edit_text_border_background"
                        android:singleLine="true"
                        android:layout_marginTop="10dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/padding_right"
                    android:paddingLeft="@dimen/padding_left"
                    android:layout_marginTop="@dimen/margin_top"
                    android:orientation="vertical">
                    <com.aircall.app.TextFonts.TextViewOpenSansRagularFont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/billing_address_company_name"
                        android:textSize="@dimen/signin_text"
                        android:textColor="@color/black"
                        android:layout_gravity="center_vertical"/>
                    <EditText
                        android:id="@+id/etCompany"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:inputType="textMultiLine"
                        android:padding="10dp"
                        android:background="@drawable/edit_text_border_background"
                        android:singleLine="true"
                        android:layout_marginTop="10dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/padding_right"
                    android:paddingLeft="@dimen/padding_left"
                    android:layout_marginTop="@dimen/margin_top"
                    android:orientation="vertical">
                    <com.aircall.app.TextFonts.TextViewOpenSansRagularFont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/billing_address_address"
                        android:textSize="@dimen/signin_text"
                        android:textColor="@color/black"
                        android:layout_gravity="center_vertical"/>
                    <EditText
                        android:id="@+id/etAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:inputType="text"
                        android:padding="10dp"
                        android:gravity="top"
                        android:background="@drawable/edit_text_border_background"
                        android:singleLine="true"
                        android:layout_marginTop="10dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/padding_right"
                    android:paddingLeft="@dimen/padding_left"
                    android:layout_marginTop="@dimen/margin_top"
                    android:orientation="vertical">
                    <com.aircall.app.TextFonts.TextViewOpenSansRagularFont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/billing_address_state"
                        android:textSize="@dimen/signin_text"
                        android:textColor="@color/black"
                        android:layout_gravity="center_vertical"/>
                    <EditText
                        android:id="@+id/etState"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_text_border_background"
                        android:padding="10dp"
                        android:focusable="false"
                        android:layout_marginTop="10dp"
                        android:drawableRight="@drawable/selectbox"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/padding_right"
                    android:paddingLeft="@dimen/padding_left"
                    android:layout_marginTop="@dimen/margin_top"
                    android:orientation="vertical">
                    <com.aircall.app.TextFonts.TextViewOpenSansRagularFont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/billing_address_city"
                        android:textSize="@dimen/signin_text"
                        android:textColor="@color/black"
                        android:layout_gravity="center_vertical"/>
                    <EditText
                        android:id="@+id/etCity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_text_border_background"
                        android:padding="10dp"
                        android:focusable="false"
                        android:layout_marginTop="10dp"
                        android:drawableRight="@drawable/selectbox"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/padding_right"
                    android:paddingLeft="@dimen/padding_left"
                    android:layout_marginTop="@dimen/margin_top"
                    android:orientation="vertical">
                    <com.aircall.app.TextFonts.TextViewOpenSansRagularFont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/billing_address_zipcode"
                        android:textSize="@dimen/signin_text"
                        android:textColor="@color/black"
                        android:layout_gravity="center_vertical"/>
                    <EditText
                        android:id="@+id/etZipcode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:inputType="number"
                        android:maxLength="5"
                        android:padding="10dp"
                        android:background="@drawable/edit_text_border_background"
                        android:singleLine="true"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/edit_text_border_text"
                        android:textColorHint="@color/edit_text_border_text" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/padding_right"
                    android:paddingLeft="@dimen/padding_left"
                    android:layout_marginTop="@dimen/margin_top"
                    android:orientation="vertical">
                    <com.aircall.app.TextFonts.TextViewOpenSansRagularFont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phone"
                        android:textSize="@dimen/signin_text"
                        android:textColor="@color/black"
                        android:layout_gravity="center_vertical"/>
                    <EditText
                        android:id="@+id/etPhoneNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:inputType="number"
                        android:maxEms="5"
                        android:padding="10dp"
                        android:background="@drawable/edit_text_border_background"
                        android:singleLine="true"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/edit_text_border_text"
                        android:textColorHint="@color/edit_text_border_text" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/padding_right"
                    android:paddingLeft="@dimen/padding_left"
                    android:layout_marginTop="@dimen/margin_top"
                    android:orientation="vertical">
                    <com.aircall.app.TextFonts.TextViewOpenSansRagularFont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mobile"
                        android:textSize="@dimen/signin_text"
                        android:textColor="@color/black"
                        android:layout_gravity="center_vertical"/>
                    <EditText
                        android:id="@+id/etMobileNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:inputType="number"
                        android:maxEms="5"
                        android:padding="10dp"
                        android:background="@drawable/edit_text_border_background"
                        android:singleLine="true"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/edit_text_border_text"
                        android:textColorHint="@color/edit_text_border_text" />
                </LinearLayout>

                <com.aircall.app.TextFonts.TextViewOpenSansRagularFont
                    android:id="@+id/tvProceed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_left"
                    android:layout_marginRight="@dimen/margin_right"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="30dp"
                    android:paddingTop="@dimen/header_padding_top"
                    android:paddingBottom="@dimen/header_padding_bottom"
                    android:inputType="textCapSentences"
                    android:textSize="@dimen/header_text_size"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@color/text_light_blue_color"
                    android:text="@string/billing_address_payment"/>

            </LinearLayout>

        </ScrollView>
    </LinearLayout>

