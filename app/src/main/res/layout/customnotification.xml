<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/imagenotileft"
        android:src="@drawable/ic_launcher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.aircall.app.TextFonts.TextViewOpenSansBoldFont
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="text title"
        android:layout_toRightOf="@+id/imagenotileft"
        android:layout_marginLeft="10dp"
        android:textColor="@color/black"
        android:textSize="@dimen/menu_text_size"/>

    <com.aircall.app.TextFonts.TextViewOpenSansRagularFont
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:text="text sample"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/imagenotileft"
        android:layout_toLeftOf="@+id/rigt"
        android:textColor="@color/black"
        android:textSize="@dimen/menu_text_size"/>

    <ImageView
        android:id="@+id/rigt"
        android:src="@drawable/ic_launcher"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content" />

</RelativeLayout>