<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/llAddress"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lladdressClick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:weightSum="5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.aircall.app.TextFonts.TextViewOpenSansRagularFont
                android:id="@+id/tvListOfAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:text="Address Here"
                android:textColor="@color/black"
                android:textSize="@dimen/forgot_password_text"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <com.aircall.app.TextFonts.TextViewOpenSansRagularFont
                    android:id="@+id/tvListOfAddressCity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="City Here"
                    android:textColor="@color/black"
                    android:textSize="@dimen/forgot_password_text"/>
                <com.aircall.app.TextFonts.TextViewOpenSansRagularFont
                    android:id="@+id/tvListOfAddressState"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="State Here"
                    android:textColor="@color/black"
                    android:textSize="@dimen/forgot_password_text"/>
                <com.aircall.app.TextFonts.TextViewOpenSansRagularFont
                    android:id="@+id/tvListOfAddressZipcode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Zipcode Here"
                    android:textColor="@color/black"
                    android:textSize="@dimen/forgot_password_text"/>
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/ivIsDefaultAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="4"
            android:src="@drawable/right_icon"
            android:visibility="invisible"/>
    </LinearLayout>

    <include
        android:id="@+id/footerView"
        layout="@layout/include_horizontal_line"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/llFooter"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:weightSum="2">

        <ImageView
            android:id="@+id/ivForEditAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/edit_icons"/>

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/devider_color"
            android:scrollbarAlwaysDrawHorizontalTrack="true"/>

        <ImageView
            android:id="@+id/ivForDeletAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:visibility="visible"
            android:src="@drawable/delete_icon"/>

    </LinearLayout>


    <include
        android:id="@+id/footerView"
        layout="@layout/include_horizontal_line"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>