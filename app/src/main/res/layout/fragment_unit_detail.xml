<LinearLayout
    android:id="@+id/llMain"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.aircall.app.Fragment.DashboardFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="@color/header">
        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:padding="@dimen/back_arrow_padding"
            android:src="@drawable/arrow"/>
        <com.aircall.app.TextFonts.TextViewOpenSansBoldFont
            android:id="@+id/tvHeaderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/unit_detail_title"
            android:textColor="@color/white"
            android:textSize="@dimen/common_header_text_size"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llEditUnit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="15dp"
                android:paddingLeft="10dp"
                android:paddingTop="15dp">


                <com.aircall.app.TextFonts.TextViewOpenSansRagularFont
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_weight="1"
                    android:text="@string/unit_detail_unit"
                    android:textColor="@color/black"
                    android:textSize="@dimen/header_text_size"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <com.aircall.app.TextFonts.TextViewOpenSansRagularFont
                        android:id="@+id/tvUnitName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_weight="1"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/header_text_size"/>

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="bottom"
                        android:layout_margin="5dp"
                        android:src="@drawable/edit_unit"/>
                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/devider_color"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="15dp"
                android:paddingLeft="10dp"
                android:paddingTop="15dp">

                <com.aircall.app.TextFonts.TextViewOpenSansRagularFont
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_weight="1"
                    android:text="@string/unit_detail_plan"
                    android:textColor="@color/black"
                    android:textSize="@dimen/header_text_size"/>

                <com.aircall.app.TextFonts.TextViewOpenSansRagularFont
                    android:id="@+id/tvUnitPlan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/header_text_size"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/devider_color"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="15dp"
                android:paddingLeft="10dp"
                android:paddingTop="15dp">

                <com.aircall.app.TextFonts.TextViewOpenSansRagularFont
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_weight="1"
                    android:paddingRight="5dp"
                    android:text="@string/unit_detail_age"
                    android:textColor="@color/black"
                    android:textSize="@dimen/header_text_size"/>

                <com.aircall.app.TextFonts.TextViewOpenSansRagularFont
                    android:id="@+id/tvUnitAge"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/header_text_size"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/devider_color"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="15dp"
                android:paddingLeft="10dp"
                android:paddingTop="15dp">

                <com.aircall.app.TextFonts.TextViewOpenSansRagularFont
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_weight="1"
                    android:text="@string/unit_detail_last_services"
                    android:textColor="@color/black"
                    android:textSize="@dimen/header_text_size"/>

                <com.aircall.app.TextFonts.TextViewOpenSansRagularFont
                    android:id="@+id/tvLastServices"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/header_text_size"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/devider_color"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="15dp"
                android:paddingLeft="10dp"
                android:paddingTop="15dp">

                <com.aircall.app.TextFonts.TextViewOpenSansRagularFont
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_weight="1"
                    android:paddingRight="5dp"
                    android:text="@string/unit_detail_upcoming_services"
                    android:textColor="@color/black"
                    android:textSize="@dimen/header_text_size"/>

                <com.aircall.app.TextFonts.TextViewOpenSansRagularFont
                    android:id="@+id/tvUpcomingServices"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/signin_text"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/devider_color"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="15dp"
                android:paddingLeft="10dp"
                android:paddingTop="15dp">

                <com.aircall.app.TextFonts.TextViewOpenSansRagularFont
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_weight="1"
                    android:paddingRight="5dp"
                    android:text="@string/unit_detail_Serviceman"
                    android:textColor="@color/black"
                    android:textSize="@dimen/header_text_size"/>

                <com.aircall.app.TextFonts.TextViewOpenSansRagularFont
                    android:id="@+id/tvServiceman"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/header_text_size"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/devider_color"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="15dp"
                android:paddingLeft="10dp"
                android:paddingTop="15dp">

                <com.aircall.app.TextFonts.TextViewOpenSansRagularFont
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_weight="1"
                    android:text="@string/unit_detail_total_services"
                    android:textColor="@color/black"
                    android:textSize="@dimen/header_text_size"/>

                <com.aircall.app.TextFonts.TextViewOpenSansRagularFont
                    android:id="@+id/tvTotalServices"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/header_text_size"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/devider_color"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="15dp"
                android:paddingLeft="10dp"
                android:paddingTop="15dp">

                <com.aircall.app.TextFonts.TextViewOpenSansRagularFont
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_weight="1"
                    android:paddingRight="5dp"
                    android:text="@string/unit_detail_remain_services"
                    android:textColor="@color/black"
                    android:textSize="@dimen/header_text_size"/>

                <com.aircall.app.TextFonts.TextViewOpenSansRagularFont
                    android:id="@+id/tvRemainingServices"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/header_text_size"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/devider_color"/>

        </LinearLayout>


    </ScrollView>
</LinearLayout>
