<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/plan_detail_background"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/padding_left"
        android:paddingRight="@dimen/padding_right"
        android:weightSum="5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">
            <com.aircall.app.TextFonts.TextViewOpenSansRagularFont
                android:id="@+id/tvAcName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:text="AC3"
                android:textColor="@color/black"
                android:textSize="@dimen/header_text_size"/>
            <com.aircall.app.TextFonts.TextViewOpenSansRagularFont
                android:id="@+id/tvSummaryPlanName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical"
                android:text="Residential Plan"
                android:textColor="@color/black"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical">

            <com.aircall.app.TextFonts.TextViewOpenSansRagularFont
                android:id="@+id/tvPerice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:gravity="right"
                android:text="$19.99"
                android:textColor="@color/black"
                android:textSize="@dimen/common_header_text_size"
                android:textStyle="bold"/>

            <com.aircall.app.TextFonts.TextViewOpenSansRagularFont
                android:id="@+id/tvPlanType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="right"
                android:text="Recuring"
                android:textColor="@color/black"/>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/padding_left"
        android:paddingRight="@dimen/padding_right">
        <com.aircall.app.TextFonts.TextViewOpenSansRagularFont
            android:id="@+id/tvSummaryDetailDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvPlanType"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/margin_top"
            android:text="Detail Description"
            android:textColor="@color/black"
            android:textSize="@dimen/signin_text"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="@dimen/padding_left"
        android:paddingRight="@dimen/padding_right">

        <com.aircall.app.TextFonts.TextViewOpenSansRagularFont
            android:id="@+id/tvSummaryRemove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/margin_top"
            android:text="@string/summary_remove"
            android:textColor="@color/black"/>
        <ImageView
            android:id="@+id/ivRemove"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tvSummaryRemove"
            android:src="@drawable/delete_icon"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/devider_color"/>
</LinearLayout>